<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/hSpinnerSelect1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="50dp"
            android:gravity="left"
            />

        <Spinner
            android:id="@+id/hSpinnerSelect2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            />

        <Spinner
            android:id="@+id/hSpinnerSelect3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginLeft="50dp"
            android:gravity="right"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/hImageViewOnclick1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/himageviewtitle1"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        >

        <ImageButton
            android:id="@+id/hImageButtonOnclick1"
            android:layout_width="165dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:src="@drawable/himagebuttonselect1"/>

        <TextView
            android:id="@+id/htextView1Center1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:text="糖醋排骨"/>

        <ImageButton
            android:id="@+id/hImageButtonOnclick2"
            android:layout_width="165dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_row="0"
            android:src="@drawable/himagebuttonselect2"/>

        <TextView
            android:id="@+id/htextView1Center2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="center"
            android:text="玉米大鲍翅"/>

        <ImageButton
            android:id="@+id/hImageButtonOnclick3"
            android:layout_width="165dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_row="2"
            android:src="@drawable/himagebuttonselect3"/>

        <TextView
            android:id="@+id/htextView1Center3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:gravity="center"
            android:text="干煸芸豆"/>

        <ImageButton
            android:id="@+id/hImageButtonOnclick4"
            android:layout_width="165dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_row="2"
            android:src="@drawable/himagebuttonselect4"/>

        <TextView
            android:id="@+id/htextView1Center4"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:gravity="center"
            android:text="寿司马铃薯"/>
    </GridLayout>

    <ImageView
        android:id="@+id/hImageViewOnclick2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/himageviewtitle2"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        >

        <ImageButton
            android:id="@+id/hImageButtonOnclick5"
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:src="@drawable/himagebuttonselect5"/>

        <TextView
            android:id="@+id/htextView1Center5"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:text="早餐"/>

        <ImageButton
            android:id="@+id/hImageButtonOnclick6"
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:layout_column="1"
            android:layout_row="0"
            android:src="@drawable/himagebuttonselect6"/>

        <TextView
            android:id="@+id/htextView1Center6"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="center"
            android:text="午餐"/>

        <ImageButton
            android:id="@+id/hImageButtonOnclick7"
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_row="2"
            android:src="@drawable/himagebuttonselect7"/>

        <TextView
            android:id="@+id/htextView1Center7"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:gravity="center"
            android:text="晚餐"/>

        <ImageButton
            android:id="@+id/hImageButtonOnclick8"
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:layout_column="1"
            android:layout_row="2"
            android:src="@drawable/himagebuttonselect8"/>

        <TextView
            android:id="@+id/htextView1Center8"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:gravity="center"
            android:text="水果餐"/>
    </GridLayout>
</LinearLayout>
